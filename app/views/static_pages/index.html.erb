<head>
  <meta http-equiv="refresh" content="300" />
</head>

<link href='//fonts.googleapis.com/css?family=Roboto:400,300,100,700' rel='stylesheet' type='text/css'>

<%= render 'header', weather: @status_board.weather_component, github: @status_board.github_component %>

<marquee id="announcement"  scrollamount="17"></marquee>

<div id="carousel" class="carousel slide" data-ride="carousel">

  <%= render 'indicators' %>

  <div class="carousel-inner" role="listbox">
    <% @status_board.components.each_with_index do |component, index| %>
      <div class="item<%= ' active' if index == 0 %>">
        <%= render component.partial, component: component %>
      </div>
    <% end %>
  </div>

</div>

<script type="text/javascript">
new Statusboard.AnnouncementMonitor();
</script>
